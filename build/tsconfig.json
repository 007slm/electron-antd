{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "../dist",
		"baseUrl": "build",
		"sourceMap": false,
		"rootDir": "../",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"esnext",
			"es6"
		],
	},
	"include": [
		"../types/**/*.ts",
		"**/*.ts",
	],
	"exclude": [
		"node_modules",
	]
}